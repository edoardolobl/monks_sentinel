# Environment configuration for GTM Quality Assurance System
# Copy this file to .env and customize for your environment

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=gtm-qa-system

# Docker Compose File Configuration
# For development: uses docker-compose.yml + docker-compose.override.yml automatically
# For production: docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d
COMPOSE_FILE=docker-compose.yml

# Container Registry (for production deployments)
# REGISTRY_URL=your-registry.com/gtm-qa

# Application Configuration
PYTHONPATH=/app
UVICORN_LOG_LEVEL=info

# Network Configuration
GTM_ORCHESTRATOR_PORT=8000
GTM_MODULE1_PORT=8001
GTM_MODULE2_PORT=8002
GTM_MODULE3_PORT=8003
GTM_MODULE4_PORT=8004

# Future AI Integration (Module 2-4)
# GEMINI_API_KEY=your_gemini_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Security Settings (Production)
SECURITY_ENABLED=true
SSL_ENABLED=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# Resource Limits (Override in production)
ORCHESTRATOR_MEMORY_LIMIT=512m
ORCHESTRATOR_CPU_LIMIT=0.5
MODULE_MEMORY_LIMIT=256m
MODULE_CPU_LIMIT=0.25

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s